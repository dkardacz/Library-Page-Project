doctype html
html(lang="pl")

  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="styles.css")
    link(rel="stylesheet", href="stylesBookList.css")
    script(src="script.js")
    title Profile

  body
    div.header
      div.menuleft
        a(href="/")
          div.logo
              img(src="img/logo-bg.svg")
        a(href="/books") Books
        a(href="/rentedBooks") Borrowed
        if role === "admin"
          a(href="/") LibraryManager
      div.menus
        a(href="/profile")
          div.profile
                img(src="img/profile.png")
    .userPanel
        img(src="img/user.jpg")
        h2 Nickname: #{username}
        h2 Role: #{role}
        a(href="/logout" class="loginbutton") Log out

    div.stopka     
        p Biblioteka Główna Akademii Górniczo-Hutniczej im. Stanisława Staszica w Krakowie
        p tel. +48 12 617 32 08
        p e-mail: bgagh@bg.agh.edu.pl