doctype html
html(lang="pl")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="styles.css")
    link(rel="stylesheet", href="stylesBookList.css")
    script(src="script.js") 
  
    title Wypożyczenie książki
  body
    div.header
      a(href="/")
        div.logo
            img(src="img/book.png")
      a(href="/")
        h1 Biblioteka
      div.menus
        a(href="/books") Książki
      
    div.mainPanel
      h1 Akademia Górniczo Hutnicza
      if error
        h2 #{errorMSG}
      else
      div.errorPanel
      div.bookPanel
        h1 Wypożyczone przez ciebie książki
        each rbook in rentedBooks
          div.bookContainer(id=`book${rbook.book._id}`)
            img.book(src=rbook.book.url, alt=rbook.book.title)
            div.infoPanel
                p Tytuł: #{rbook.book.title}
                p Autor: #{rbook.book.author}
                p.copies Liczba wypożyczonych egzemplarzy: #{rbook.no_copies}
                button(type="button", onclick=`returnBook('${rbook.book._id}')`) Oddaj

          
          
         

    div.stopka       
        p Kontakt
        p Telefon: 123 456 789
        p Adres mailowy: biblio@agh.edu.pl

